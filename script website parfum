<script>
  const cartBtn = document.getElementById("cart-btn");
  const cartBox = document.getElementById("cart");
  const cartItems = document.getElementById("cart-items");
  const cartTotal = document.getElementById("cart-total");
  const checkoutBtn = document.getElementById("checkout-btn");
  const checkoutForm = document.getElementById("checkout-form");
  const sendOrderBtn = document.getElementById("send-order");
  let cart = [];

  cartBtn.addEventListener("click", () => {
    cartBox.style.display = cartBox.style.display === "block" ? "none" : "block";
    checkoutForm.style.display = "none";
  });

  document.querySelectorAll(".add-cart").forEach(button => {
    button.addEventListener("click", () => {
      const name = button.getAttribute("data-name");
      const price = parseInt(button.getAttribute("data-price"));
      cart.push({ name, price });
      updateCart();
    });
  });

  checkoutBtn.addEventListener("click", () => {
    checkoutForm.style.display = "block";
  });

  function updateCart() {
    cartItems.innerHTML = "";
    let total = 0;
    cart.forEach(item => {
      let li = document.createElement("li");
      li.textContent = `${item.name} - Rp ${item.price.toLocaleString()}`;
      cartItems.appendChild(li);
      total += item.price;
    });
    cartTotal.textContent = total.toLocaleString();
    cartBtn.textContent = `ðŸ›’ Keranjang (${cart.length})`;
  }

  sendOrderBtn.addEventListener("click", () => {
    const name = document.getElementById("cust-name").value;
    const address = document.getElementById("cust-address").value;
    const phone = document.getElementById("cust-phone").value;

    if (!name || !address || !phone || cart.length === 0) {
      alert("Harap lengkapi form dan isi keranjang sebelum checkout!");
      return;
    }

    let orderText = `Halo, saya ingin memesan parfum:\n\n`;
    cart.forEach(item => {
      orderText += `- ${item.name} (Rp ${item.price.toLocaleString()})\n`;
    });
    orderText += `\nTotal: Rp ${cart.reduce((a,b)=>a+b.price,0).toLocaleString()}\n\n`;
    orderText += `Nama: ${name}\nAlamat: ${address}\nNo. WA: ${phone}`;

    // Ganti nomor WA di sini (format: 628xxxxxxx)
    let waNumber = "6281328216004";
    let waLink = `https://wa.me/${waNumber}?text=${encodeURIComponent(orderText)}`;
    window.open(waLink, "_blank");
  });
</script>
