<div id="checkout-form">
  <h3>Form Checkout</h3>
  <input type="text" id="cust-name" placeholder="Nama Lengkap" required>
  <textarea id="cust-address" placeholder="Alamat Lengkap" required></textarea>
  <input type="text" id="cust-phone" placeholder="No. WhatsApp" required>
  <button id="send-order">Kirim Pesanan via WhatsApp</button>
